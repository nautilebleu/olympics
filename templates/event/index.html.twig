{% extends 'base.html.twig' %}

{% block title %}List of events{% endblock %}

{% block body %}
<div class="example-wrapper">
    <a href="{{ path('create_event') }}">Add Event</a>
    <ul>
        {% for event in events %}
            <li>
                <a href="{{ path('show_event', {id: event.id}) }}">
                    {{ event.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
